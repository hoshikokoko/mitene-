<div class="container">
  <div class="row mt-3">
    <div class="col offset-sm-1 col-sm-5">
      <h4><%= @staff.last_name %><%= @staff.first_name %></h4>
      <table class="table table-borderless">
        <tr>
          <td>社員番号</td>
          <td><%= @staff.employee_number %></td>
        </tr>
        <tr>
          <td>氏名</td>
          <td><%= @staff.last_name %>　<%= @staff.first_name %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= @staff.email %></td>
        </tr>
        <tr>
          <td>在籍状態</td>
          <td>
            <% if @staff.is_deleted == false %>
              <strong class="text-success">在籍</strong>
            <% else %>
              <strong class="text-black-50">退職</strong>
            <% end %>
          </td>
        </tr>
      </table>
      <%= link_to "編集する", edit_admin_staff_path, class: "btn btn-success" %>
      </div>
    </div>
  </div>
</div>