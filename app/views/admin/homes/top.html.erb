<div class="container">
  <%= form_with url: search_path, method: :get do |f| %>
    <%= f.text_field :content %>
    <%= f.select :model, options_for_select({ "タイトル" => "infomation_title","投稿内容" => "infomation_body","スタッフ" => "staff" }) %>
    <%= f.select :method, options_for_select({ "完全一致" => "perfect", "前方一致" => "forward", "後方一致" => "backward", "部分一致" => "partial" }) %>
    <%= f.submit '検索' %>
  <% end %>
  <div class="row">
    <%= render 'layouts/sidebar_left', tag_list: @tag_list %>
    <div class="col-8 infomation">
      <div class="row">
        <div class="col-6">
          
          
        </div>
      </div>
      
    </div>
    <div class="col-2">
      <%= link_to admin_infomations_path, class: 'btn btn-info' do %>
        投稿一覧
      <% end %>
      <%= link_to admin_staffs_path, class: 'btn btn-info' do %>
        社員一覧
      <% end %>
    </div>
  </div>
</div>