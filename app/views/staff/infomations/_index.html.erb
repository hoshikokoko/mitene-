<% infomations.each do |infomation| %>
  <div class="card mb-3">
    <div class="card-body">
      <h5 class="card-title"> <%= link_to infomation.title, staff_infomation_path(infomation.id), class: "text-info" %></h5>
      <p class="card-text"><%= infomation.body %></p>
      <p class="card-poster"><%= infomation.staff.last_name %><%= infomation.staff.first_name %></p>
      <p class="post_date text-right"><%= infomation.created_at.strftime("%Y/%m/%d")%></p>
    </div>
  </div>
<% end %>
<div class="pagination">
  <%= paginate infomations %>
</div>