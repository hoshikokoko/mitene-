<div class="container">
  <div class="row">
    <div class="col-2">
    </div>
    <div class="col-8 infomation">
      <div class="row">
        <div class="col-6">
            <div class="row">
              <%= @infomation.title  %>
              <%= @infomation.body %>
              <%= @infomation.staff.last_name %>
              <%= @infomation.staff.first_name %>
            </div>
            <div class="row">
              <% if @infomation.staff == current_staff %>
                <%= link_to edit_staff_infomation_path, class: "btn btn-info edit_infomation_#{@infomation.id}" do %>
                  編集
                <% end %>
                <%= link_to staff_infomation_path(@infomation.id), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-danger destroy_infomation_#{@infomation.id}" do %>
                  削除
                <% end %>
              <% end %>
              <% if @infomation.bookmarked_by?(current_staff) %>
                <td><%= link_to "ブックマークを外す", staff_infomation_bookmarks_path(@infomation.id), method: :delete %></td>
              <% else %>
                <td><%= link_to "ブックマーク", staff_infomation_bookmarks_path(@infomation.id), method: :post %></td>
              <% end %>
            </div>
            <div class="row">
              <%= form_with(model:[@infomation, @infomation_comment], method: :post) do |f| %>
                <%= f.text_area :comment, rows:'5', placeholder: "コメントをここに記述してください", class: "w-100" %>
                <%= f.submit "送信する", class: "btn btn-success" %>
              <% end %>
            </div>
        </div>
      </div>
    </div>
    <div class="col-2">
      <%= link_to new_staff_infomation_path, class: 'btn btn-info' do %>
        新規投稿
      <% end %>
      <%= link_to staff_infomations_path, class: 'btn btn-info' do %>
        投稿一覧
      <% end %>
    </div>
  </div>
</div>