<div class="container">
  <div class="row">
    <% @tag_lists.each do |t| %>
      <%= t.name %>
      <%= t.infomations.count %>
    <% end %>
  </div>
  <%= form_with model: @infomation, url: staff_infomation_path, method: :patch do |f| %>
    <div class="row">
      <div class="col">
        <%= f.label :title, "タイトル", :class => "col-md-3 col-form-label" %>
        <%= f.text_field :title, class: "form-control col-md-3", placeholder: "ここにタイトルを記述してください" %>
      </div>
    </div>
    <div class="row">
      <div class="col">
        <%= f.label :title, "本文", :class => "col-md-3 col-form-label" %>
        <%= f.text_area :body, class: "form-control col-md-3", placeholder: "ここに本文を記述してください" %>
      </div>
    </div>
    <div class="row">
      <div class="col">
        <%= f.label :name, "タグ名", :class => "col-md-3 col-form-label" %>
        <%= f.text_field :name, value: @tag_list, class: "form-control col-md-3", placeholder: "ここにタグを記述してください" %>
      </div>
    </div>
    <div class="row">
      <div class="col">
        <%= f.radio_button :priority, :false %>
        <%= label :priority, "通常", {value: :false, style: "display: inline-block;"} %>
        <%= f.radio_button :priority, :true %>
        <%= label :priority, "優先", {value: :true, style: "display: inline-block;"} %>
      </div>
    </div>
    <%= f.submit "編集" ,class: 'btn btn-success' %>
  <% end %>
</div>