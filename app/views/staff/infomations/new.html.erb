<div class="container">
  <%= form_with model: @infomation, url: staff_infomations_path, method: :post do |f| %>
    <div class="row">
      <div class="col">
        <%= f.label :title, "タイトル", :class => "col-md-3 col-form-label" %>
        <%= f.text_field :title, class: "form-control col-md-3", placeholder: "タイトル" %>
      </div>
    </div>
    <div class="row">
      <div class="col">
        <%= f.label :title, "本文", :class => "col-md-3 col-form-label" %>
        <%= f.text_area :body, class: "form-control col-md-3", placeholder: "ここに本文を記述してください" %>
    </div>
      </div>
  <% end %>
</div>