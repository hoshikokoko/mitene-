<header>
  <div class="container">
    <div class="row mb-5">
      <div class="col float-right">
        <div class="header_link">
        <% if staff_signed_in? %>
            <div class="float-left">
              <%= link_to staff_top_path,class: 'btn' do %>
                 <%= image_tag 'mitene-logo.png', size: "100x60" %>
                <% end %>
            </div>
             <div class="float-right">
              <%= link_to destroy_staff_session_path, method: :delete,class: 'btn btn-info' do %>
                ログアウト
              <% end %>
            </div>
        <% elsif admin_signed_in? %>
            <div class="float-left">
              <%= link_to admin_top_path,class: 'btn' do %>
                 <%= image_tag 'mitene-logo.png', size: "100x60" %>
              <% end %>
            </div>
            <div class="float-right">
              <%= link_to destroy_admin_session_path, method: :delete,class: 'btn btn-success' do %>
                ログアウト
              <% end %>
            </div>
        <% else %>
          <div class="float-left">
            <%= link_to root_path,class: 'btn' do %>
              <%= image_tag 'mitene-logo.png', size: "100x60" %>
            <% end %>
          </div>
        <% end %>
        </div>
      </div>
    </div>
  </div>
</header>